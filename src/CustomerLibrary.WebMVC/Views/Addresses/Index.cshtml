@using System.Web.UI.WebControls
@model IEnumerable<CustomerLibrary.Address>

@{
    ViewBag.Title = "Addresses";

    var deleteLinkCssClass = "btn btn-link link";

    if (Model.Count() < 2)
    {
        deleteLinkCssClass += " disabled";
    }
}

<h2 class="text-primary m-bt">Address List for customer @ViewData["FirstName"] @ViewData["LastName"]</h2>
<div class="row">
    <div class="col-xs-6">
        <p>
            @Html.ActionLink("Return to Customer List", "Index", "Customers")
        </p>
    </div>
    <div class="col-xs-6 text-right">
        <p>
            @Html.ActionLink("Create New", "Create")
        </p>
    </div>
</div>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.AddressLine)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AddressLine2)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AddressType)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.City)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PostalCode)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.State)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Country)
        </th>
        <th>Actions</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.AddressLine)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AddressLine2)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AddressType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PostalCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.State)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Country)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new {addressId = item.AddressId}) |
                @Html.ActionLink("Delete", "Delete", new {addressId = item.AddressId}, new {@class = deleteLinkCssClass})
            </td>
        </tr>
    }

</table>